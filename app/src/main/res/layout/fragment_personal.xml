<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/header_icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/civ_head"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="@dimen/dimen_5dp"
            android:text="十岁天才少年"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <!--兼容5.0以下的vector使用selector作为drawableLeft图片-->
    <TextView
        android:id="@+id/tv_btn_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/select_personal_setting"
        android:drawableRight="@drawable/fragmentation_ic_right"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="设置"
        android:textColor="@color/md_grey_700"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f3f3f3" />

    <!--兼容5.0以下的vector使用selector作为drawableLeft图片-->
    <TextView
        android:id="@+id/tv_btn_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/select_personal_about"
        android:drawableRight="@drawable/fragmentation_ic_right"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="关于"
        android:textColor="@color/md_grey_700"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="声明：此项目仅做学习练手使用，不得用于商业用途"
        android:textColor="@color/md_grey_500" />

</LinearLayout>